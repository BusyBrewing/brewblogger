{% if log.brewLink1 is not empty %}
<div id="sidebarWrapper">
    <div id="sidebarHeader"><span class="data-icon"><img src="{{ image_src }}link.png" align="texttop"></span><span class="data">Related Link{% if log.brewLink2 is not empty %}s{% endif %}</span></div>
    <div id="sidebarInnerWrapper">
        <table>
            <tr>
                <td class="listLeftAlign"><a href="{{ log.brewLink1 }}" target="_blank">{{ log.brewLink1Name }}</a></td>
            </tr>
            {% if log.brewLink2 is not empty %}
            <tr>
                <td class="listLeftAlign"><a href="{{ log.brewLink2 }}" target="_blank">{{ log.brewLink2Name }}</a></td>
            </tr>
            {% endif %}
        </table>
    </div>
</div>
{% endif %}